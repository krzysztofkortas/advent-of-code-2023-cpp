{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "conf-common",
            "hidden": true,
            "description": "General settings that apply to all configurations",
            "generator": "Ninja",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "VCPKG_MANIFEST_DIR": "${sourceDir}/vcpkg",
                "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/vcpkg/triplets"
            }
        },
        {
            "name": "gcc-common",
            "hidden": true,
            "inherits": "conf-common",
            "description": "General settings that apply to gcc",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang-common",
            "hidden": true,
            "inherits": "conf-common",
            "description": "General settings that apply to clang",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-20",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-20",
                "CMAKE_CXX_FLAGS": "-nostdinc++",
                "CMAKE_CXX_STANDARD_LIBRARIES": "/usr/local/lib64/libstdc++.so",
                "CMAKE_CXX_STANDARD_INCLUDE_DIRECTORIES": "/usr/local/include/c++/15.0.0;/usr/local/include/c++/15.0.0/x86_64-linux-gnu",
                "VCPKG_TARGET_TRIPLET": "x64-linux-clang-20",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/toolchains/clang-20-toolchain.cmake"
            }
        },
        {
            "name": "gcc-debug",
            "inherits": "gcc-common",
            "displayName": "gcc Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "gcc-release",
            "inherits": "gcc-common",
            "displayName": "gcc Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "clang-debug",
            "inherits": "clang-common",
            "displayName": "clang Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang-debug-clang-tidy",
            "inherits": "clang-debug",
            "displayName": "clang Debug with clang-tidy",
            "cacheVariables": {
                "ENABLE_CLANG_TIDY": true
            }
        },
        {
            "name": "clang-release",
            "inherits": "clang-common",
            "displayName": "clang Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],
    "testPresets": [
        {
            "name": "test-common",
            "hidden": true,
            "description": "Test CMake settings that apply to all configurations",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "test-gcc-debug",
            "inherits": "test-common",
            "displayName": "Strict",
            "description": "Enable output and stop on failure",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "test-gcc-release",
            "inherits": "test-common",
            "displayName": "Strict",
            "description": "Enable output and stop on failure",
            "configurePreset": "gcc-release"
        },
        {
            "name": "test-clang-debug",
            "inherits": "test-common",
            "displayName": "Strict",
            "description": "Enable output and stop on failure",
            "configurePreset": "clang-debug"
        },
        {
            "name": "test-clang-release",
            "inherits": "test-common",
            "displayName": "Strict",
            "description": "Enable output and stop on failure",
            "configurePreset": "clang-release"
        }
    ]
}